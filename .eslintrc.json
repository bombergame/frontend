{
    "parser": "babel-eslint",
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", "tab"],
        "no-tabs": 0
    }
}